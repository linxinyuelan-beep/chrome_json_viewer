{
  "author": "linxinyuelan@gmail.com",
  "manifest_version": 3,
  "name": "JSON Formatter & Viewer",
  "version": "1.0.17",
  "description": "A Chrome extension that detects, formats and visualizes JSON on web pages.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.bundle.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "format-selected-json": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Format selected JSON text"
    },
    "toggle-hover-detection": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle JSON hover detection"
    }
  }
}